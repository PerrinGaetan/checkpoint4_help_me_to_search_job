{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block body %}
<div class="container">

    <h1 class="text-center">Veuillez-vous connecter</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="form-control container-md">
    <div class="mb-3">
        <label for="username" class="form-label">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
    </div>
    <div>
        <label for="password" class="form-label">Password:</label>
        <input type="password" id="password" name="_password" class="form-control"/>
    </div>

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="/rechercher"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" class="btn btn-secondary m-4">login</button>
    </form>
    <p>Pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous !!!</a></p>
</div>
{% endblock %}
